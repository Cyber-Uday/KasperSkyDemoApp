<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutUsActivity"
    android:orientation="vertical"
    android:background="@drawable/backforabout">

    <TextView
        android:layout_width="369dp"
        android:layout_height="55dp"
        android:layout_marginTop="80dp"
        android:gravity="center"
        android:text="Info About Kasper Security"
        android:textSize="24dp"
        android:layout_gravity="center"
        android:textStyle="bold" />

    <VideoView
        android:id="@+id/videoView"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="2dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="206dp"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:text="Kaspersky is a cybersecurity company known for its antivirus and cybersecurity solutions. The company was founded in 1997 by Eugene Kaspersky and Natalya Kaspersky and is headquartered in Moscow, Russia. Kaspersky offers a wide range of security products and services for individuals, small businesses, and large enterprises."
        android:textSize="16sp"
        android:textStyle="bold" />


</LinearLayout>