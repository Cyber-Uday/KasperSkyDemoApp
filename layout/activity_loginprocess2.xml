<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">
    <VideoView
        android:id="@+id/video2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


    <LinearLayout
        android:layout_width="418dp"
        android:layout_height="517dp"
        android:orientation="vertical">

        <!-- <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:layout_marginLeft="20dp"
                android:fontFamily="cursive"
                android:text="Hi, Welcome Back !"
                android:textAlignment="center"
                android:textAppearance="@style/myTabStyle"
                android:textColor="#1CA01C"
                android:textSize="24sp"
                android:textStyle="bold" />-->

        <EditText
            android:id="@+id/et_login_username"
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="115dp"
            android:layout_marginTop="185dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:hint="  Admin : #########"

            android:inputType="text"
            android:textColor="#1CA01C"
            android:textColorHint="#1CA01C"
            android:textSize="16sp"
            android:textStyle="bold|italic" />

        <EditText
            android:id="@+id/et_login_password"
            android:layout_width="224dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="115dp"
            android:layout_marginTop="15dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:hint="  Pwd    : ********"
            android:inputType="textPassword"
            android:textColor="#1CA01C"
            android:textColorHint="#1CA01C"
            android:textSize="16sp"
            android:textStyle="bold|italic" />

        <CheckBox
            android:id="@+id/check_login_show_hide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="115dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="Show Password"
            android:textColor="#1CA01C"
            android:textSize="16sp"
            android:textStyle="bold" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_login_login"
            android:layout_width="153dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="30dp"
            android:backgroundTint="#1CA01C"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="LOGIN"
            android:textSize="16sp"
            android:textColor="#191B16"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_login_termsandcondition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="30dp"
            android:drawableLeft="@drawable/baseline_check_box_24"
            android:text="  Terms And Conditions"
            android:textColor="#1CA01C"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_login_new_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="1dp"
            android:text=" "
            android:textColor="#1CA01C"
            android:textSize="16sp"
            android:textStyle="bold" />


    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>