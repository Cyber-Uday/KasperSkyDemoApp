<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity"
    android:orientation="vertical">
    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="Search maps"
        android:gravity="center"
        android:textColorHint="@color/purple"
        android:textSize="16dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="12dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" ▪️  INDIA"
        android:textSize="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="50dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" ▪️  USA"
        android:textSize="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="50dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" ▪️  AMERICA"
        android:textSize="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="50dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" ▪️  CHINA"
        android:textSize="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="50dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  Recent Search Maps"
        android:textSize="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="50dp"
        android:drawableLeft="@drawable/baseline_history_24"/>

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="306dp"
        android:layout_height="205dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="60dp"
        android:backgroundTint="#02FFFFFF"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/earthrotate" />


</LinearLayout>